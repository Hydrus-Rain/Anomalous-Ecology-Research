<?xml version='1.0' encoding='utf-8'?>
<Defs>

  <!-- Viridian Raptor -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>AER_ViridianRaptor</defName>
    <label>Primal Viridian Raptor</label>
    <description>A medium sized reptile that stalks the Primal Jungles it calls its home. With its quick movements, and Green hide that blends in well with the foliage, it is quite the sucessful ambush predator.</description>
    <statBases>
      <MoveSpeed>6</MoveSpeed>
      <MarketValue>450</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>65</ComfyTemperatureMax>
      <FilthRate>1.2</FilthRate>
      <Wildness>0.55</Wildness>
    </statBases>
    <race>
      <meatLabel>Reptile meat</meatLabel>
      <petness>0.6</petness>
      <body>Body_ViridianRaptor</body>
      <leatherDef>AER_PrimalLeather</leatherDef>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.65</baseBodySize>
      <baseHealthScale>1.3</baseHealthScale>
      <baseHungerRate>0.30</baseHungerRate>
      <foodType>CarnivoreAnimalStrict</foodType>
      <predator>true</predator>
      <maxPreyBodySize>0.5</maxPreyBodySize>
      <lifeExpectancy>10</lifeExpectancy>
      <manhunterOnTameFailChance>0.25</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.60</manhunterOnDamageChance>
      <nuzzleMtbHours>12</nuzzleMtbHours>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <specialTrainables>
        <li MayRequire="Ludeon.RimWorld.Odyssey">AttackTarget</li>
      </specialTrainables>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.11</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>AER_ViridianRaptorEggFertilized</eggFertilizedDef>
        <eggUnfertilizedDef>AER_ViridianRaptorEggUnfertilized</eggUnfertilizedDef>
        <eggFertilizationCountMax>3</eggFertilizationCountMax>
        <eggLayIntervalDays>10</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1~3</eggCountRange>
      </li>
    </comps>
    <tools>
			<li>
				<label>claws</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>10</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>6</power>
				<cooldownTime>1.85</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>8</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>3</power>
				<cooldownTime>1.65</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
    <tradeTags>
      <li>AnimalPet</li>
      <li>AnimalFighter</li>
      <li>AnimalUncommon</li>
    </tradeTags>
    <modExtensions>
      <li MayRequire="Mlie.XNDNocturnalAnimals,OskarPotocki.VanillaFactionsExpanded.Core" Class="NocturnalAnimals.ExtendedRaceProperties">
        <bodyClock>Nocturnal</bodyClock>
      </li>
    </modExtensions>
  </ThingDef>
  
