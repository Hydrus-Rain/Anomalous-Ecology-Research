<?xml version='1.0' encoding='utf-8'?>
<Defs>
  <ThingDef ParentName="AnimalThingBase">
    <defName>AER_Fernstalker</defName>
    <label>Fernstalker</label>
    <description>A large venomous lizard tht prowls the Primal Jungles. They secrete toxins from venom glands in their lower jaw to neutralize their prey.</description>
    <statBases>
      <MoveSpeed>3.6</MoveSpeed>
      <MarketValue>175</MarketValue>
      <ComfyTemperatureMin>0</ComfyTemperatureMin>
      <ComfyTemperatureMax>60</ComfyTemperatureMax>
      <ToxicEnvironmentResistance>0.95</ToxicEnvironmentResistance>
      <ToxicResistance>0.9</ToxicResistance>
      <Wildness>0.5</Wildness>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>AER_FernstalkerEggUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>AER_FernstalkerEggFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>6</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <race>
      <body>AER_Body_Fernstalker</body>
      <predator>true</predator>
      <maxPreyBodySize>0.85</maxPreyBodySize>
      <baseBodySize>0.6</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <baseHungerRate>0.2</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>AER_PrimalLeather</leatherDef>
      <trainability>None</trainability>
      <petness>0.15</petness>
      <lifeExpectancy>12</lifeExpectancy>
      <soundEating>Reptile_Eat</soundEating>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.2222</minAge>
          <soundWounded>Pawn_Iguana_Wounded</soundWounded>
          <soundDeath>Pawn_Iguana_Death</soundDeath>
          <soundCall>Pawn_Iguana_Call</soundCall>
          <soundAngry>Pawn_Iguana_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <headPosPerRotation>
        <li>(-0.01, 0, 0.3)</li>
        <li>(0.35, 0, 0.05)</li>
        <li>(0.0, 0, -0.24)</li>
        <li>(-0.35, 0, 0.05)</li>
      </headPosPerRotation>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalPet</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase">
    <defName>AER_Fernstalker</defName>
    <label>Fernstalker</label>
    <race>AER_Fernstalker</race>
    <combatPower>60</combatPower>
    <ecoSystemWeight>0.30</ecoSystemWeight>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Animals/Primal/Fernstalker</texPath>
          <drawSize>1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Animals/Primal/Dessicated_Fernstalker</texPath>
          <drawSize>1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Animals/Primal/Fernstalker</texPath>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Animals/Primal/Dessicated_Fernstalker</texPath>
          <drawSize>2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Animals/Primal/Fernstalker</texPath>
          <drawSize>3</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Animals/Primal/Dessicated_Fernstalker</texPath>
          <drawSize>3.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>
