<?xml version='1.0' encoding='utf-8'?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>AER_Sunbloom</defName>
    <label>Sunbloom</label>
    <description>A strange medium sized yellow flower which grows in large clusters. Mostly known and remembered for looking like a neckless sunflower and having much more nutritious seeds in them.</description>
    <statBases>
      <MaxHitPoints>95</MaxHitPoints>
      <Beauty>4</Beauty>
      <BeautyOutdoors>4</BeautyOutdoors>
      <Nutrition>0.35</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Primal/Sunbloom</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
    </graphicData>
    <hideAtSnowOrSandDepth>0.9</hideAtSnowOrSandDepth>
    <plant>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <growDays>1.5</growDays>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>5</maxMeshCount>
      <visualSizeRange>0.3~1.5</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>4</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <wildBiomes>
        <AER_PrimalJungle>0.5</AER_PrimalJungle>
      </wildBiomes>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>
</Defs>